{
  "version": 2,
  "builds": [
    {
      "src": "index.js",  // Your entry point file
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/index.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
